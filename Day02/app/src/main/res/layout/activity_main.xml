<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/add_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="add_row"
            />

        <TableLayout
            android:id="@+id/table_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1,2,3"
            android:layout_below="@id/add_row"
            >
            <TableRow
                android:id="@+id/row1">

                <Button
                    android:id="@+id/row1_btn1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Linear_Layout"/>
                <Button
                    android:id="@+id/row1_btn2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Relative_Layout"
                    />
                <Button
                    android:id="@+id/row1_btn3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Calc"
                    />
                <Button
                    android:id="@+id/row1_btn4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="framelayout"
                    />
            </TableRow>
            <TableRow
                android:id="@+id/row2">
                <Button
                    android:id="@+id/row2_btn1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="이미지 변경"/>
                <Button
                    android:id="@+id/row2_btn2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="숫자 세기"
                    />
                <Button
                    android:id="@+id/row2_btn3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="핸들러"
                    />
                <Button
                    android:id="@+id/row2_btn4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="ListView"
                    />
            </TableRow>
            <TableRow
                android:id="@+id/row3">
                <Button
                    android:id="@+id/row3_btn1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Recycler View"/>
                <Button
                    android:id="@+id/row3_btn2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Custom ListView"
                    />
                <Button
                    android:id="@+id/row3_btn3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="LifeCycle"
                    />
                <Button
                    android:id="@+id/row3_btn4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="ListView2"
                    />
            </TableRow>
            <TableRow
                android:id="@+id/row4">
                <Button
                    android:id="@+id/row4_btn1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Custom_ListView"/>
                <Button
                    android:id="@+id/row4_btn2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Phone_Book"
                    />
                <Button
                    android:id="@+id/row4_btn3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="LifeCycle"
                    />
                <Button
                    android:id="@+id/row4_btn4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="ListView2"
                    />
            </TableRow>
        </TableLayout>
    </RelativeLayout>
</ScrollView>